    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_medicine"
    app:startDestination="@id/medicinePage">

    <fragment
        android:id="@+id/medicinePage"
        android:name="com.example.onlineveterinarydoctor.presentation.nav_medicine.MedicinePage"
        android:label="Medicine"
        tools:layout="@layout/page_medicine" >
        <action
            android:id="@+id/action_medicinePage_to_addMedicineScreen"
            app:destination="@id/addMedicineScreen" />
    </fragment>
    <fragment
        android:id="@+id/addMedicineScreen"
        android:name="com.example.onlineveterinarydoctor.presentation.nav_medicine.screens.AddMedicineScreen"
        android:label="Add medicine"
        tools:layout="@layout/screen_add_medicine" />
